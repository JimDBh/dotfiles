evaluate-commands %sh{
    config_files="
        common.kak
        defperl.kak
        commands.kak
        mappings.kak
        languages.kak
        rust_syntax.kak
        recentf.kak
        plugins.kak
    "

    for file in $config_files; do
        printf "%s\n" "
        try %{
            source \"%val{config}/$file\"
        } catch %{
            echo -debug %val{error}
        }"
    done
}
