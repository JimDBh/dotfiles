" Common Settings
	set encoding=utf-8

	set mouse=a

	set number

	syntax on

	set path+=**
	set wildmenu

	set foldmethod=indent
	set foldlevelstart=20
	hi Folded ctermfg=black
	hi Folded ctermbg=white

	set wrap
	set linebreak

	set listchars=tab:▏\ ,eol:\ ,extends:,precedes:,space:\ ,trail:⋅
	set list
	set termguicolors

	set splitright
	set splitbelow
	set signcolumn=yes

" Tabs
	set noexpandtab
	set tabstop=4
	set shiftwidth=4
	set autoindent
	set smartindent

